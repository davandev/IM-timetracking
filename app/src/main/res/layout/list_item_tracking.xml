<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_tracking_clock"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:minWidth="?android:attr/listPreferredItemHeight"
            android:text="@string/list_item_tracking_initial_time"
            android:textColor="@color/im_green"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/list_item_tracking_btn_resume_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:alpha="0.8"
            android:background="@null"
            android:src="@drawable/action_btn_play" />

        <TextView
            android:id="@+id/list_item_tracking_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/list_item_tracking_clock"
            android:layout_toLeftOf="@id/list_item_tracking_btn_resume_pause"
            android:layout_toRightOf="@id/list_item_tracking_clock"
            android:layout_toStartOf="@id/list_item_tracking_btn_resume_pause"
            android:text="@string/list_item_tracking_unnamed_title"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>
